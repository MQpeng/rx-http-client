/**
 * Root tsconfig file for use in all tests.
 */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./test",
    "rootDir": "./test",
    "outDir": "test/dist",
    "module": "CommonJS",
    "target": "ES2020",
  },
  "include": [
    "test"
  ],
  "exclude": [
    "packages",
    "dist",
    "lib",
    "node_modules",
    "test/dist"
  ]
}
